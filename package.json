{
  "name": "@blindnet/pc4w-root",
  "description": "Collection of Web Components helping developers to execute privacy-by-design and privacy UX.",
  "license": "MIT",
  "version": "0.3.0",
  "private": true,
  "type": "module",
  "scripts": {
    "lerna": "lerna",
    "build:imports": "lerna exec -- \"importly --host=unpkg --lookup=unpkg --semver=minor < package.json > import-map.json\"",
    "build:localize": "lerna run localize",
    "build:rollup": "rollup -c",
    "build": "yarn run build:imports && yarn run build:localize && yarn run build:rollup",
    "watch": "yarn run build:rollup --configKeep --watch",
    "analyze": "lerna exec -- \"cem analyze --litelement\"",
    "start": "wds",
    "prepublish": "yarn build",
    "lint": "eslint --ext .ts,.js,.html . --ignore-path .gitignore && prettier \"**/*.{ts,js,json,md}\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.js,.html . --fix --ignore-path .gitignore && prettier \"**/*.{ts,js,json,md}\" --write --ignore-path .gitignore",
    "typecheck": "tsc --noEmit",
    "test": "wtr --coverage",
    "test:watch": "wtr --watch",
    "storybook": "concurrently -k -r \"tsc --watch --preserveWatchOutput -p stories\" \"wds -c .storybook/server.mjs\"",
    "prestorybook:build": "yarn build aa yarn storybook:build-stories",
    "storybook:build-stories": "tsc -p stories",
    "storybook:build": "build-storybook",
    "prebundle": "yarn storybook:build",
    "bundle:clean": "rimraf build",
    "bundle:copy": "copyfiles -u 1 -a -E \"storybook-static/*\" \"storybook-static/**/*\" build && copyfiles -a -E \"demo/*\" \"demo/**/*\" \"packages/**/dist/*\" \"packagfes/**/dist/**/*\" build",
    "bundle": "yarn bundle:clean && yarn bundle:copy"
  },
  "dependencies": {
    "@lit/localize": "^0.11.3",
    "@rollup/plugin-alias": "^3.1.9",
    "lit": "^2.0.2"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.4.17",
    "@lerna/batch-packages": "^3.16.0",
    "@lerna/filter-packages": "^5.3.0",
    "@lerna/project": "^5.3.0",
    "@lit/localize-tools": "^0.6.5",
    "@open-wc/eslint-config": "^4.3.0",
    "@open-wc/testing": "next",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.4",
    "@types/uuid": "^8.3.4",
    "@types/yargs-parser": "^21.0.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@web/dev-server": "^0.1.28",
    "@web/dev-server-esbuild": "^0.3.1",
    "@web/dev-server-storybook": "next",
    "@web/rollup-plugin-import-meta-assets": "^1.0.7",
    "@web/test-runner": "next",
    "concurrently": "^5.3.0",
    "copyfiles": "^2.4.1",
    "deepmerge": "^4.2.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "estree-walker": "^3.0.1",
    "execa": "^6.1.0",
    "glob": "^8.0.3",
    "husky": "^4.3.8",
    "importly": "^0.2.0",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "magic-string": "^0.26.2",
    "minimist": "^1.2.6",
    "prettier": "^2.4.1",
    "read-pkg": "^7.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.77.2",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-filesize": "^9.1.2",
    "rollup-plugin-import-map": "^2.2.2",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-unpkg": "^0.1.0",
    "tslib": "^2.3.1",
    "typescript": "^4.7.4"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "class-methods-use-this": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off",
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ],
      "no-shadow": "off",
      "@typescript-eslint/no-shadow": [
        "error"
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "@lit/**",
      "lit"
    ]
  }
}
